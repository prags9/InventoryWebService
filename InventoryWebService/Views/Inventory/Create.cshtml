@model List<InventoryWebService.Models.Inventory>

@{
    ViewData["Title"] = "Create Inventory";
}

<h1>Create Inventory</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form  asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model![0].Name" class="control-label"></label>
                <input asp-for="@Model![0].Name" class="form-control" />
                <span asp-validation-for="@Model![0].Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model![0].Quantity" class="control-label"></label>
                <input asp-for="@Model![0].Quantity" class="form-control" />
                <span asp-validation-for="@Model![0].Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model![0].CreatedOn" class="control-label"></label>
                <input asp-for="@Model![0].CreatedOn" class="form-control" />
                <span asp-validation-for="@Model![0].CreatedOn" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
